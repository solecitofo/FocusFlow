{
  "name": "focusflow",
  "version": "1.0.0",
  "description": "ADHD task management desktop app",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "electron.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron-dev": "electron .",
    "start": "npm run dev & npm run electron-dev",
    "electron-build": "npm run build && electron-builder --win",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "autoprefixer": "^10.4.23",
    "express": "^5.2.1",
    "lucide-react": "^0.562.0",
    "postcss": "^8.4.41",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwindcss": "^4.1.18",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/ui": "^4.0.16",
    "electron": "^33.4.11",
    "electron-builder": "^26.0.12",
    "jsdom": "^27.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  },
  "build": {
    "appId": "com.focusflow.app",
    "productName": "FocusFlow",
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "build/**/*",
      "electron.js",
      "package.json"
    ]
  }
}
